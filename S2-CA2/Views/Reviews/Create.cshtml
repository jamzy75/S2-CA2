@model S2_CA2.Models.Review

@{
    ViewData["Title"] = "Write a Review";
}

<h2>Write a Review</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Book ID</label>
        <input asp-for="BookId" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Review</label>
        <textarea asp-for="Content" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label>Rating (1-5)</label>
        <input asp-for="Rating" type="number" min="1" max="5" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Submit Review</button>
</form>
