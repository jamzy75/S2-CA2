@model S2_CA2.Models.ViewModels.CreateBookVM
@using S2_CA2.Data
@inject ApplicationDbContext DbContext

@{
    ViewData["Title"] = "Add New Book";
}

<h2>Add Book</h2>
<form asp-action="Create" method="post">
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required/>
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="form-group">
        <label asp-for="AuthorId">Author</label>
        @Html.DropDownListFor(
            m => m.AuthorId,
            new SelectList(DbContext.Authors.ToList(), nameof(Author.Id), nameof(Author.Name)),
            null,
            new { @class = "form-select" }
        )
        @Html.ValidationMessageFor(m => m.AuthorId)
    </div>
    <div class="form-group">
        <label>ISBN</label>
        <input asp-for="Isbn" class="form-control" required/>
        @Html.ValidationMessageFor(m => m.Isbn)
    </div>
    <div class="form-group">
        <label>Published Date</label>
        <input asp-for="PublishedDate" type="date" class="form-control" required/>
        @Html.ValidationMessageFor(m => m.PublishedDate)
    </div>
    <div class="form-group">
        <label>Genre</label>
        <input asp-for="Genre" class="form-control" required/>
        @Html.ValidationMessageFor(m => m.Genre)
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
