@model IEnumerable<S2_CA2.Models.Author>

@{
    ViewData["Title"] = "Manage Authors";
}

<h2>Authors List</h2>
<a asp-action="Create" class="btn btn-primary">Add New Author</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Bio</th>
            <th>Birthdate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>@author.Bio</td>
                <td>@author.Birthdate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>